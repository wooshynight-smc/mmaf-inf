@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div class="homebannermain">
        <video preload autoplay muted loop class="homebannermain">
            <source src="~/Media/homepagevid.mp4" type="video/mp4">
        </video>
        <img src="https://upload.wikimedia.org/wikipedia/commons/9/9d/Arrow-down.svg" width=60 style="position:absolute; top:38%; left: 50%; transform: translate(-50%, -50%);"/> 
      <div class = "homebannertext">  
        <h1>Welcome to the Museum of Modern Art and Feeling</h1>
      </div>
    </div>

    <div class="field-content">
        <a href="/collection">
            <span class="greenhomepage">
                <h2>on display now:</h2>
                <p>21 may 2022 through 21 july 2022</p>
            </span>
        </a>

        <a href="/visit">
            <span class="bluehomepage">
                <h2>get your tickets:</h2>
                <p>credit card & age discounts valid</p>
            </span>
        </a>

        <a href="/covid19">
            <span class="orangehomepage">
                <h2>coronavirus:</h2>
                <p>learn about our covid-19 measures</p>
            </span>
        </a>

        <a href="/studiom">
            <span class="purplehomepage">
                <h2>studioM:</h2>
                <p>an exclusive opportunity to exhibit your art</p>
            </span>
        </a>
    </div>
